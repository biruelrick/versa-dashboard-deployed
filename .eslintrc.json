{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "overrides": [
    {
      "files": [
        "*.test.js"
      ],
      "env": {
        "jest/globals": true
      },
      "plugins": [
        "jest"
      ],
      "extends": [
        "plugin:jest/recommended"
      ]
    }
  ],
  "rules": {
    "semi": [
      2,
      "always"
    ],
    "padded-blocks": [
      "error",
      {
        "blocks": "always"
      }
    ]
  }
}
